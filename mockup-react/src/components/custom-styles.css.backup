/* React 组件补充样式 */

/* CSS 变量和基础样式 */

/* 清理调试样式 */
:root {
  --px-theme-clr: #222;
  --px-theme-bg: #f7bf00;
}

/* 确保 body 和 html 样式正确 */
html {
  overflow: hidden;
  height: 100%;
}

body {
  margin: 0;
  padding: 0;
  height: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  background: #f7f6f1;
}

/* 主容器样式 */
main {
  height: 100vh;
  overflow: hidden;
}

/* 手风琴布局效果 - 严格还原原网站 */
@media (min-width: 961px) {
  /* 页面基础样式 */
  .page {
    width: 80px;
    height: 100%;
    float: left;
    transition: width 0.4s cubic-bezier(0,-0.06, 0.29, 0.82);
    overflow: hidden;
    position: relative;
  }
  
  .page.active {
    width: calc(100% - 480px);
  }
  
  /* 页面头部样式 */
  .page header {
    position: relative;
    border-left: 1px solid var(--px-theme-clr);
    cursor: pointer;
    height: 100%;
    float: left;
    width: 80px;
    opacity: 0;
    transition: all 0.8s ease;
  }
  
  .page:first-child header {
    border-left: none;
    cursor: default;
    outline: 1px solid var(--px-theme-clr);
  }
  
  /* 加载完成后显示header */
  body.hr-loaded .page header {
    opacity: 1;
  }
  
  /* 统一所有页面的page-title样式 - 使用相同的Y轴位置 */
  .page .page-title {
    position: absolute !important;
    top: 60px !important;
    left: 50% !important;
    transform: translate(-50%, 0) rotate(-90deg) !important;
    transform-origin: center !important;
    display: flex !important;
    flex-direction: row !important;
    align-items: flex-start !important;
    justify-content: flex-start !important;
    gap: 12px !important;
    white-space: nowrap !important;
    margin: 0 !important;
    padding: 0 !important;
    box-sizing: border-box !important;
  }
  
  /* 01-06页面的page-title统一Y轴位置，保持同一水平 */
  .page .page-title {
    top: 60px !important;
    transform: translate(-50%, 0) rotate(-90deg) !important;
  }
  
  /* 强制所有页面的page-title位置完全一致 */
  .page#home .page-title,
  .page#about .page-title,
  .page#resume .page-title,
  .page#portfolio .page-title,
  .page#blog .page-title,
  .page#contact .page-title {
    top: 60px !important;
    left: 50% !important;
    transform: translate(-50%, 0) rotate(-90deg) !important;
    position: absolute !important;
    margin-top: 0 !important;
    margin-left: 0 !important;
    margin-bottom: 0 !important;
    margin-right: 0 !important;
  }
  
  /* 确保所有page-title在相同的基线上 */
  .page header .page-title {
    top: 60px !important;
    left: 50% !important;
    transform: translate(-50%, 0) rotate(-90deg) !important;
    position: absolute !important;
  }
  
  /* Portfolio页面特殊处理 - 确保顶部对齐 */
  section.page#portfolio .page-title {
    top: 60px !important;
    transform: translate(-50%, 0) rotate(-90deg) !important;
  }
  
  /* 清理调试样式 */
  
  /* 统一所有页面的title-number样式 */
  .page .title-number {
    font-family: 'Space Mono', monospace !important;
    font-size: 48px !important;
    font-weight: 300 !important;
    color: var(--px-theme-clr) !important;
    margin: 0 !important;
    padding: 0 !important;
    border: none !important;
    outline: none !important;
    background: transparent !important;
    transition: transform 0.2s ease !important;
    transform-origin: center !important;
    line-height: 1 !important;
    vertical-align: top !important;
    align-self: flex-start !important;
    display: inline-block !important;
    text-align: left !important;
    letter-spacing: normal !important;
    word-spacing: normal !important;
    text-indent: 0 !important;
    box-sizing: border-box !important;
  }
  
  /* 统一所有页面的title-text样式 */
  .page .title-text {
    font-size: 16px !important;
    font-weight: 300 !important;
    color: var(--px-theme-clr) !important;
    margin: 0 !important;
    padding: 0 !important;
    border: none !important;
    outline: none !important;
    background: transparent !important;
    letter-spacing: 2px !important;
    text-transform: uppercase !important;
    writing-mode: vertical-rl !important;
    transition: all 0.3s ease !important;
    transform: rotate(270deg) !important;
    line-height: 1 !important;
    vertical-align: top !important;
    align-self: flex-start !important;
    display: inline-block !important;
    text-align: left !important;
    word-spacing: normal !important;
    text-indent: 0 !important;
    box-sizing: border-box !important;
    font-style: normal !important;
    text-decoration: none !important;
  }
  
  /* 所有页面标题文字保持水平显示，不需要旋转 */
  
  /* 悬停效果 */
  .page:not(.active) header:hover .title-number {
    transform: scale(3) translate(-14%);
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 1px var(--px-theme-clr);
  }
  
  /* 页面内容 */
  .page .content {
    width: calc(100% - 80px);
    float: right;
    padding: 0px 80px 0px 0px;
    overflow-y: scroll;
    overflow-x: hidden;
    height: 100%;
    display: none;
  }
  
  .page.active .content {
    display: block;
  }
  
  /* Home页面特殊样式 */
  .page#home .content {
    padding: 35px 70px;
    position: relative;
  }
  
  .page#home .content > div {
    z-index: 1;
    position: absolute;
    bottom: 80px;
    width: calc(100% - 140px);
    left: 70px;
  }
  
  /* Home页面背景 */
  #home-background {
    position: absolute;
    top: 60px;
    left: 80px;
    width: calc(100% - 160px);
    height: calc(100% - 200px);
    background: url('/assets/img/background.jpg') center center;
    background-size: cover;
    opacity: 0.1;
    z-index: 0;
  }
  
  /* Home页面header特殊样式 */
  .page#home header.home-header {
    cursor: default;
  }
  
  .page#home .logo {
    position: absolute;
    top: 40px;
    left: 50%;
    transform: translateX(-50%);
    width: 32px;
  }
  
  .page#home .logo img {
    width: 100%;
    transition: transform 0.3s ease;
  }
  
  .page#home .logo:hover img {
    transform: scale(1.1);
  }
  
  .page#home .social {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .page#home .social li {
    margin: 15px 0;
  }
  
  .page#home .social a {
    color: var(--px-theme-clr);
    font-size: 14px;
    display: block;
    text-align: center;
    padding: 8px 0;
    border-top: 1px solid var(--px-theme-clr);
    transition: all 0.25s ease;
  }
  
  .page#home .social li:hover {
    transform: translateY(-3px);
    transition: transform 0.2s ease;
  }
  
  /* 页面加载延迟动画 */
  .page:nth-child(1) header {
    transition-delay: 0.0s;
  }
  .page:nth-child(2) header {
    transition-delay: 0.1s;
  }
  .page:nth-child(3) header {
    transition-delay: 0.2s;
  }
  .page:nth-child(4) header {
    transition-delay: 0.3s;
  }
  .page:nth-child(5) header {
    transition-delay: 0.4s;
  }
  .page:nth-child(6) header {
    transition-delay: 0.5s;
  }
}

/* Blog页面特殊样式 */
.page#blog.active {
  width: 100% !important;
}

.page#blog.active header {
  display: none;
}

.page#blog:not(.active) header {
  display: block !important;
}

/* blog-header已清除 */

.page#blog .content {
  padding-top: 0px;
  width: 100% !important;
  float: none !important;
}

.page#blog.active .content {
  display: block !important;
  opacity: 1 !important;
}

/* 移动端页面布局 */
@media (max-width: 960px) {
  /* 移动端：所有页面垂直排列 */
  .page {
    display: block !important;
    height: auto !important;
    min-height: 100vh;
    float: none !important;
  }
  
  .page .content {
    display: block !important;
    opacity: 1 !important;
    float: none !important;
    padding: 35px 40px !important;
  }
  
  /* 移动端隐藏页面header（导航条） */
  .page header {
    display: none !important;
  }
  
  /* 首页header在移动端显示 */
  .page#home header {
    display: block !important;
  }
  
  /* Blog页面移动端样式 */
  .page#blog .content {
    padding-top: 35px !important;
  }
}

/* 桌面端导航菜单 - 手风琴布局下隐藏 */
.desktop-nav {
  display: none !important;
}

.desktop-nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.desktop-nav li {
  margin: 15px 0;
}

.desktop-nav a {
  display: block;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 2px solid rgba(255, 255, 255, 0.5);
  text-indent: -9999px;
  transition: all 0.3s ease;
  position: relative;
}

.desktop-nav a:hover,
.desktop-nav a.active {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(255, 255, 255, 1);
  transform: scale(1.2);
}

.desktop-nav .nav-text {
  position: absolute;
  right: 25px;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 5px 10px;
  border-radius: 4px;
  font-size: 12px;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  text-indent: 0;
}

.desktop-nav a:hover .nav-text {
  opacity: 1;
}

/* Slider 组件样式 */
.slider-container {
  position: relative;
}

.slider-wrapper {
  overflow: hidden;
}

.slider-track {
  display: flex;
  transition: transform 0.5s ease;
}

.slider-item {
  min-width: 100%;
  flex-shrink: 0;
}

/* About 页面轮播控制按钮 */
.about-slider-controls {
  position: absolute;
  bottom: 20px;
  left: 20px;
}

.about-slider-controls span {
  display: block;
  width: 34px;
  height: 34px;
  line-height: 34px;
  float: left;
  margin-right: 2px;
  font-size: 16px;
  text-align: center;
  border: 1px solid var(--px-theme-clr);
  cursor: pointer;
  transition: all 0.25s ease;
  background: transparent;
  color: var(--px-theme-clr);
}

.about-slider-controls span:hover {
  background: var(--px-theme-clr);
  color: #fff;
}

/* 证言轮播控制按钮 */
.testomonial-slider-controls {
  position: absolute;
  bottom: 0;
  right: 20px;
}

.testomonial-slider-controls span {
  display: block;
  width: 34px;
  height: 34px;
  line-height: 34px;
  float: left;
  margin-right: 2px;
  font-size: 16px;
  text-align: center;
  border: 1px solid var(--px-theme-clr);
  cursor: pointer;
  transition: all 0.25s ease;
  background: transparent;
  color: var(--px-theme-clr);
}

.testomonial-slider-controls span:hover {
  background: var(--px-theme-clr);
  color: #fff;
}

/* 幻灯片编号样式 */
.slide-number {
  font-family: 'Space Mono', monospace;
  font-size: 13px;
  position: absolute;
  bottom: 20px;
  right: 80px;
  text-align: right;
  margin: 0;
  color: var(--px-theme-clr);
}

/* Lightbox 补充样式 */
.mfp-bg {
  backdrop-filter: blur(2px);
}

.mfp-close {
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.mfp-close:hover {
  opacity: 1;
}

/* 技能条动画增强 */
.skill-bar.enabled {
  transition: width 1000ms cubic-bezier(0.69, -0.06, 0.29, 0.82);
}

/* 作品集过滤器增强 */
.portfolio-filter li {
  transition: all 0.2s ease;
}

.portfolio-filter li:hover {
  transform: translateY(-2px);
}

/* 响应式优化 */
@media (max-width: 960px) {
  .about-slider-controls,
  .slide-number {
    display: none;
  }
  
  .testomonial-slider-controls {
    left: 20px;
    right: auto;
  }
}

@media (max-width: 767px) {
  .slider-controls span {
    width: 28px;
    height: 28px;
    line-height: 28px;
    font-size: 14px;
  }
}
